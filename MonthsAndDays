import java.util.Scanner;

public class MonthsAndDays{
    public static void main(String[] args) {

        String thirtyOneDays = "31 days";
        String thirtyDays = "30 days";
        String febDays = "28 days (29 days if leap year)";

        Scanner scanner = new Scanner (System.in);
            System.out.print("Enter any number from 1 to 12 to convert to month: ");

        int numberEntered =  scanner.nextInt();
        switch (numberEntered)
        {
            case 1:
                System.out.println("January : " + thirtyOneDays);
                break;
            case 2:
                System.out.println("February : " + febDays);
                break;
            case 3:
                System.out.println("March : " + thirtyOneDays);
                break;
            case 4:
                System.out.println("April : " + thirtyDays);
                break;
            case 5:
                System.out.println("May : " +thirtyOneDays);
                break;
            case 6:
                System.out.println("June : " + thirtyDays);
                break;
            case 7:
                System.out.println("July : " + thirtyOneDays);
                break;
            case 8:
                System.out.println("August : " + thirtyOneDays);
                break;
            case 9:
                System.out.println("September : " + thirtyDays);
                break;
            case 10:
                System.out.println("October : " + thirtyOneDays);
                break;
            case 11:
                System.out.println("November : " + thirtyDays);
                break;
            case 12:
                System.out.println("December : " + thirtyOneDays);
                break;
            default:
                System.out.println("Invalid Input"); //Other characters and numbers - Invalid Input
                System.out.println("Accepts numbers from 1 to 12 only.");
                System.out.println("Please try again.");
                break;
        }
    }
}
